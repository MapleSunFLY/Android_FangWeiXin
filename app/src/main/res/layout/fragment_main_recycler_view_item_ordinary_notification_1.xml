<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_main_recycler_view_item_my_img_wh"
    android:layout_marginTop ="@dimen/fragment_main_recycler_view_item_margin"
    android:background="@color/fragment_main_recycler_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recyclerview_item_ordinary_1_img"
        style="@style/WrapWrap"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/fragment_main_recycler_view_item_margin"
        android:layout_marginStart="@dimen/fragment_main_recycler_view_item_margin"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/recyclerview_item_ordinary_1_text"
        style="@style/WrapWrap"
        android:textSize="@dimen/fragment_main_recycler_view_item_name_textsize"
        android:text="测试"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/recyclerview_item_ordinary_1_img"
        android:layout_toEndOf="@id/recyclerview_item_ordinary_1_img"
        android:layout_marginLeft="@dimen/fragment_main_recycler_view_item_margin"
        android:layout_marginStart="@dimen/fragment_main_recycler_view_item_margin" />

    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/fragment_main_recycler_view_item_gone_img_wh"
        android:layout_height="@dimen/fragment_main_recycler_view_item_gone_img_wh"
        android:id="@+id/recyclerview_item_notification_1_img"
        android:background="@null"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/fragment_main_recycler_view_item_margin"
        android:layout_marginEnd="@dimen/fragment_main_recycler_view_item_margin" />
    <TextView
        android:id="@+id/recyclerview_item_notification_1_text"
        style="@style/WrapWrap"
        android:textSize="@dimen/fragment_main_recycler_view_item_num_textsize"
        android:visibility="gone"
        android:text="测试"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/recyclerview_item_notification_1_img"
        android:layout_toStartOf="@id/recyclerview_item_notification_1_img"
        android:layout_marginRight="@dimen/fragment_main_recycler_view_item_margin"
        android:layout_marginEnd="@dimen/fragment_main_recycler_view_item_margin" />

</RelativeLayout>